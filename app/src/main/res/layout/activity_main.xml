<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.odeh.benue.MainActivity"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/benue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="24dp"
            android:paddingRight="24sp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tiv"
                android:background="#90ff0000"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/tiv_text_view"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24sp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/idoma"
                android:background="#90ff0000"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="24sp"
                android:fontFamily="sans-serif-smallcaps"
                android:id="@+id/idoma_text_view"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
