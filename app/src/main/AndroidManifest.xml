<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.odeh.benue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CategoryActivity"
            android:label="Select category"/>

        <activity
            android:name=".FamilyActivity"
            android:label="@string/family_category"/>

        <activity
            android:name=".NumbersActivity"
            android:label="@string/numbers_category"/>
        <activity
            android:name=".PhrasesActivity"
            android:label="@string/phrases_category"/>
        <activity
            android:name=".ColorsActivity"
            android:label="@string/colors_category"/>
        <activity
            android:name=".WordsActivity"
            android:label="@string/words_category"/>

    </application>

</manifest>